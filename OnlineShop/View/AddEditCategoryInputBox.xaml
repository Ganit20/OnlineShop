<Window x:Class="OnlineShop.View.AddEditCategoryInputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShop.View"
        mc:Ignorable="d"
        Title="AddEditCategoryInputBox" Height="150" Width="500" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <Label Content="Category Name"/>
            <TextBox Text="{Binding Category.CategoryName,Mode=TwoWay}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Okay" Click="DoneButton" Margin="10" Padding="10"/>
                <Button Content="Cancel" Click="CancelButton" Margin="10" Padding="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
