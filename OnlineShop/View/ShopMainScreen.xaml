<Page x:Class="OnlineShop.View.ShopMainScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OnlineShop.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShopMainScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
            <Button Content="Home Page" Click="HomePageClick" Margin="10" Padding="5"/>
            <Button Content="Profile" Click="ProfileClick" Margin="10" Padding="5"/>
            <Button Content="Shopping Cart" Click="CartClick" Margin="10" Padding="5"/>
            <Button Content="Admin Panel" Margin="10" Click="AdminPanelClick" Padding="5"/>
            <Button Content="Refresh" Click="Refresh" Margin="10" Padding="5"/>
        </StackPanel>
        <Frame x:Name="ShopPageFrame" Grid.Row="1" />
    </Grid>
</Page>
